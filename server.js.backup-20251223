// ===== START SERVER =====
const server = app.listen(PORT, '0.0.0.0', () => {
  console.log(`ğŸŒ Server running on http://0.0.0.0:${PORT}`);
});

// Graceful shutdown
process.on('SIGTERM', () => {
  server.close(() => {
    console.log('Server shutting down gracefully');
    process.exit(0);
  });
});

// Keep-alive
setInterval(() => {
  // Keep process alive
}, 60000);
